<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
<br><br>

  <div class="container">

    <article class="jumbotron">
      <div class="row">
        <div class="col-sm-9">
          <div class="login">
            <%= form_for(:venue, :url => '/venues') do |f| %>
            <% if flash.alert %>
            <div class="alert alert-danger"> <%= flash.alert %> </div>
            <% end %>
              <p> Name:</br> <%= f.text_field :name%> </p>
              <p> Website:</br> <%= f.text_field :website%> </p>
              <p> Address:</br> <%= f.text_field :address%></p>
              <p> Description:</br> <%= f.text_field :description %> </p>
              <%= f.submit 'Create!' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
